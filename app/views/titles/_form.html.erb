<%= form_with(model: title) do |form| %>
  <% if title.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(title.errors.count, "error") %> prohibited this title from being saved:</h2>

      <ul>
        <% title.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :emp_no, style: "display: block" %>
    <%= form.number_field :emp_no %>
  </div>

  <div>
    <%= form.label :title, style: "display: block" %>
    <%= form.text_field :title %>
  </div>

  <div>
    <%= form.label :from_date, style: "display: block" %>
    <%= form.date_field :from_date %>
  </div>

  <div>
    <%= form.label :to_date, style: "display: block" %>
    <%= form.date_field :to_date %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>

<p style="color: green"><%= notice %></p>

<h1 style="text-align:center; color:navy;">Departments</h1>

<div id="departments" style="background-color: bisque;" >
  <% @departments.each do |department| %>
    <div style="border-bottom: double;">
    <%= render department %>
    <p>
      <%= link_to "View this department", department, class:"btn btn-primary"%>
    </p>
  <% end %>
</div>

<%= link_to "Add New department", new_department_path,class:"btn btn-success" %>
  <%= link_to "Back to employees", employees_path,class:"btn btn-secondary" %>
